<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="za.ac.cut.hockeyapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HockeyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HockeyAppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/activity_main_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SetRolesActivity"
            android:label="@string/activity_roles_title"
            android:theme="@style/HockeyAppTheme" />
        <activity
            android:name=".activity.UserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SelectUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TeamsOpponentsActivity"
            android:label="@string/title_activity_teams_opponents"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddTeamActivity"
            android:label="@string/title_activity_add_team"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".activity.AddOpponentActivity"
            android:label="@string/title_activity_add_opponent"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity android:name=".activity.CoachMenuActivity" />
        <activity
            android:name=".activity.SelectTeamActivity"
            android:label="@string/title_activity_select_team"></activity>
    </application>

</manifest>