<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="za.ac.cut.hockeyapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HockeyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HockeyAppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/activity_main_title" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.SetRolesActivity"
            android:label="@string/activity_roles_title"
            android:theme="@style/HockeyAppTheme" />
        <activity android:name=".activity.UserActivity" />
        <activity android:name=".activity.UserItemsActivity"></activity>
    </application>

</manifest>